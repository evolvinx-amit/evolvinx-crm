<div class="row-fluid">
  <div class="span12">
    <table class="table table-bordered table-hover table table-condensed">
      <thead>
        <tr>
          <th><%= t "user.User_id" %></th>
          <th><%= (t "user.name") %></th>
          <th><%= t "user.user_name" %></th>
          <th><%= t "global.email" %></th>
          <th><%= t "global.role" %></th>
          <th><%= t "global.phone" %></th>
          <th><%= t "global.active" %></th>
        </tr>
      </thead>
      <tbody>
        <% for user in @users do %>
            <tr class="<%= cycle :odd, :even %>">
              <td><%= link_to user.id, user %></td>
              <td><%= user.name %></td>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td style="text-transform:capitalize;"><%= user.role.name %></td>
              <td>
                <% if user.phone != nil %>
                  <%= user.phone %>
                <% else %>
                  N/A
                <% end %>
              </td>
              <td>
                <% if user.active %>
                  Active
                <% else %>
                  Inactive
                <% end %>
              </td>
              <td>
                <a class="btn btn-small" href="#">Edit</a>
                <a class="btn btn-small" href="#">Delete</a>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>